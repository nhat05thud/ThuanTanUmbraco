@inherits UmbracoViewPage<ThuanTanUmbraco.Models.LoginForm>
@{
    if (Model.IsRunScripts)
    {
        <script type="text/javascript">
            swal("@Model.ResponseHeader", "@Html.Raw(Model.ResponseText)", "@(Model.IsSuccess ? "success" : "error")");
            @if (Model.IsSuccess)
            {
                <text>
                    setTimeout(function() {
                        window.location = "@Html.Raw(Model.RedirectLink)";
                    }, 200);
                </text>
            }
        </script>
    }
}
@Html.AntiForgeryToken()
<div class="item">
    @Html.TextBoxFor(x => x.Username, new { placeholder = "Email" })
    @Html.ValidationMessageFor(x => x.Username)
</div>
<div class="item">
    @Html.PasswordFor(x => x.Password, new { placeholder = "Password" })
    @Html.ValidationMessageFor(x => x.Password)
</div>